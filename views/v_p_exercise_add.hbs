<section class="dashboard">
    <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>
        <h6>{{user.role}}, {{user.fullname}}, {{user.email}}, {{user.ic}},
		{{#if assignedTo}}
        Assigned to {{assignedTo}}</h6>
        {{/if}}
    </div>
    <div class="dash-content">
        <div class="overview">
			
			<div class="title">
                <i class="uil uil-basketball"></i>
                <span class="text">Add New Exercise List</span>
            </div>
        
            <br><br>
            <ol class="breadcrumb" style="background-color: #ffffff;">
                <li class="breadcrumb-item"><a href="/exercise/view">Back to Exercise</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add New Exercise</li>
            </ol>
            <br>


            {{#if alert}}
            <div class="container" style="background-color: #ffffff;">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success! </strong>{{alert}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
            {{/if}}

            <br>
            <div class="activity">
                <form class="row g-3 needs-validation" method="POST" action="/exercise/add" novalidate>
                    {{> v_p_exercise_form}}
                </form>
            </div>	
        </div>
    </div>
</section>


