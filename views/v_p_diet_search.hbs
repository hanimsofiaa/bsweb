<section class="dashboard">
    <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>
		<h6>{{user.role}}, {{user.fullname}}, {{user.email}}, {{user.ic}}</h6>
    </div>
    <div class="dash-content">
		
		<div class="overview">
			
			<div class="title">
                <i class="uil uil-utensils"></i>
                <span class="text">Search Food From Database</span>
            </div>
			
			
			<br><br>
			<ol class="breadcrumb" style="background-color: #ffffff;">
				<li class="breadcrumb-item"><a href="/diet/view">Back to Diet</a></li>
				<li class="breadcrumb-item active" aria-current="page">Search Food List From Database</li>
			</ol>
			<br>


			{{#if alert}}
			<div class="container" style="background-color: #ffffff;">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>Success! </strong>{{alert}}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
			{{/if}}

			<br>
			<div class="container">
				<!--button for SEARCH -->
				<div class="input-group mb-3">
				<form autocomplete="on" class="input-group mb-3" method="POST" action="/diet/foodlist">
					<input type="search" autocomplete="on" class="form-control" name="search" placeholder="Search Name of Food from Database" aria-label="Search">
					<div class="input-group-append">
						<span type="submit" class="input-group-text"><i class="bi bi-search"></i></span>
					</div>
				
					{{#if user.ic}}
					<!--IC Input Field--> 
					<div class="form-group" id="ic" name= "ic">
					<input type="hidden" class="form-control" id="ic" name= "ic" value="{{user.ic}}">
					</div>
					{{/if}}

					{{#if this.ic}}
					<!--IC Input Field--> 
					<div class="form-group" id="ic" name= "ic">
					<input type="hidden" class="form-control" id="ic" name= "ic" value="{{this.ic}}">
					</div>
					{{/if}}
					{{#if ic}}
					<!--IC Input Field--> 
					<div class="form-group" id="ic" name= "ic">
					<input type="hidden" class="form-control" id="ic" name= "ic" value="{{ic}}">
					</div>
					{{/if}}
					
					
				</form>
				</div>
			</div>	
			<br>
			
			{{#if searchword}}
			<div class="container mt-4" style="background-color: #ffffff;"><h5>Searched Results for <b>"{{searchword}}"</b></h5></div>
			{{/if}}
	
			{{#if ic}}
					<!--IC Input Field--> 
					<div class="form-group" id="ic" name= "ic">
					<input type="hidden" class="form-control" id="ic" name= "ic" value="{{ic}}">
					</div>
			{{/if}}
			{{#each rows}}
			<hr>
			<div class="activity" style="justify-content: center;">
				<form class="row g-3 needs-validation" method="POST" action="/diet/add_foodlist" novalidate>
					
					{{#if user.ic}}
					<!--IC Input Field--> 
					<div class="form-group" id="ic" name= "ic">
					<input type="hidden" class="form-control" id="ic" name= "ic" value="{{user.ic}}">
					</div>
					{{/if}}

					{{#if this.ic}}
					<!--IC Input Field--> 
					<div class="form-group" id="ic" name= "ic">
					<input type="hidden" class="form-control" id="ic" name= "ic" value="{{this.ic}}">
					</div>
					{{/if}}
					
					{{#if ic}}
					<!--IC Input Field--> 
					<div class="form-group" id="ic" name= "ic">
					<input type="hidden" class="form-control" id="ic" name= "ic" value="{{ic}}">
					</div>
					{{/if}}
					
				 {{> v_p_diet_form_search}}	
				</form>
			</div>
			<br>
			{{/each}}
		</div>
	</div>
</section>

