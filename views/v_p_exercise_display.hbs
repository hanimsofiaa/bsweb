<section class="dashboard">
    <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>
    </div>
    <div class="dash-content">
		<br><br>
		<ol class="breadcrumb" style="background-color: #ffffff;">
			<li class="breadcrumb-item"><a href="/exercise/view">Back to Exercise</a></li>
			<li class="breadcrumb-item active" aria-current="page">Display Exercise</li>
		</ol>
		<br>
		{{#if alert}}
		<div class="container mt-4" style="background-color: #ffffff;">
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<strong>Success! </strong>{{alert}}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		</div>
		{{/if}}

		<br>
		<center><h3>Display Exercise</h3></center>
		<div class="container mt-4">
			{{#each rows}} 
			<div class="row mb-5"> 
				<div class="col text-center">
					<h3>{{this.activity}}</h3>
					<h3>Calories Burn: {{this.calories_burn}} kcal</h3>
				</div>
			</div>
			<div class="row"> 
				<div class="col"> 
					<table class="table table-bordered"> 
						<thead> 
							<tr>
							<th scope="col">Activity</th> 
							<th scope="col" class="text-center">Duration</th>
							<th scope="col" class="text-center">Step Count</th>
							<th scope="col" class="text-center">Distance</th>
							<th scope="col" class="text-center">Calories Burn(kcal)</th>
							<th scope="col">Created on</th> 
							<th scope="col">Last Update</th> 
							</tr> 
						</thead> 
						<tbody> 
							<tr>
							<th scope="row">{{this.activity}}</th> 
							<td>{{{this.duration}}}</td>
							<td>{{{this.step_count}}}</td>
							<td>{{{this.distance}}}</td>
							<td>{{{this.calories_burn}}}</td>
							<td>{{{this.createdAt}}}</td>
							<td>{{this.updatedAt}}</td> 
							</tr>
						</tbody> 
					</table>
				</div>
			</div>
			{{/each}}
		</div>	
	</div>
</section>


