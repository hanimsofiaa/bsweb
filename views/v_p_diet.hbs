<div class="container mt-4">
	
	<div class="row" style="justify-content: center;">
	<div class="col-7">
		<h3>Your Food List</h3>
	</div>
	
	<!--button for ADD -->
	<div class="col-5 d-flex justify-content-end">
		<div class="dropdown">
		<button class="btn btn-primary dropdown-toggle align-self-center" type="button" id="dropdownMenu2" data-toggle="dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			+ Add Food
		</button>
		<div class="dropdown-menu" aria-labelledby="dropdownMenu2">
			<a class="dropdown-item" href="/diet/foodlist">Search Food Database</a>
			<a class="dropdown-item" href="/diet/add">Form</a>
		
		</div>
		</div>
	</div>
	
	<!--button for SEARCH -->
	<form class="input-group mb-3" method="POST" action="/diet/search">
		<input type="search" class="form-control" name="search" placeholder="Search Food or Meal" aria-label="Search">
		<button type="submit"><span><i class="bi bi-search"></i></span></button>	
			
	</form>

	
	<table class="table table-bordered">
		<thead>
			<tr>
				<!--<th scope="col">#</th>-->
				<th scope="col" class="text-center">Food</th>
				<th scope="col" class="text-center">Calories</th>
				<th scope="col" class="text-center">Meal</th>
				<th scope="col" class="text-center">Date</th>
				<!--column for READ, EDIT, DELETE -->
				<th scope="col" class="text-center">Update</th> 
			</tr>
		</thead>
		<tbody>
			
			{{#each rows}}
			<tr>
				<!--<th scope="row">{{{this.id}}}</th>-->
				<td>{{{this.name}}}</td>
				<td>{{{this.calories}}}</td>
				<td>{{{this.type}}}</td>
				<td>{{{this.updatedAt}}}</td>
				<td  class="text-center">
					<a href="/diet/display/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye-fill"></i> View </a>
					<a href="/diet/update/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pen-fill"></i> Edit </a>
					<a href="/diet/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-trash-fill"></i> Delete </a>
				</td>
			</tr>
			{{/each}}
			
		</tbody>
	</table>
</div>



