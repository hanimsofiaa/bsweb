{{#if alert}}
<div class="container mt-4" style="background-color: #ffffff;">
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		<strong>Success! </strong>{{alert}}
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
</div>
{{/if}}

<br>
<center><h3>Display Food</h3></center>
<div class="container mt-4">
	{{#each rows}} 
	<div class="row mb-5"> 
		<div class="col text-center">
			<h3>{{this.name}}</h3>
			<h3>Calories Intake: {{this.calories}} kcal</h3>
		</div>
	</div>
	<div class="row"> 
		<div class="col"> 
			<table class="table"> 
				<thead> 
					<tr>
					<th scope="col">Name</th> 
					<th scope="col" class="text-center">Meal</th>
					<th scope="col" class="text-center">Serving Size</th>
					<th scope="col" class="text-center">Serving Type</th>
					<th scope="col" class="text-center">Calories(kcal)</th>
					<th scope="col">Created on</th> 
					<th scope="col">Last Update</th> 
					</tr> 
				</thead> 
				<tbody> 
					<tr>
					<th scope="row">{{this.name}}</th> 
					<td>{{{this.type}}}</td>
					<td>{{{this.serving_size}}}</td>
					<td>{{{this.serving_type}}}</td>
					<td>{{{this.calories}}}</td>
					<td>{{{this.createdAt}}}</td>
					<td>{{this.updatedAt}}</td> 
					</tr>
				</tbody> 
			</table>
		</div>
	</div>
	{{/each}}
</div>	


